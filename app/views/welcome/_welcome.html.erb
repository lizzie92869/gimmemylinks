<div class="row">
	<div class="col-lg-4 col-md-4 col-sm-12 col-xs-12" >

		<div class="pos font">
		 <h1>MyLinks</h1>
			<div class="list-group">
			<% current_user.lists.uniq.each do |list| %>
			
    		<li style="background-color: <%= list.color %>; max-width: 265px;" class="list-group-item d-flex justify-content-between align-items-center">
   			 <a href=<%= list_path(list) %> role="button" class="text-list"><%= list.name %></a>
   			 <!-- inline style to overwrite bootstrap -->
    		<span style="background-color: white; color: grey;" class="badge badge-primary badge-pill link-count"><%= (list.links.size)-1 %></span>
  			</li>
			<% end %>
		

			<div class="list-group-item ">
			<%= form_for @new_list, :url => url_for(:controller => 'lists', :action => 'create'), method: :post do |f| %>
			<%= f.hidden_field :user_id, value:  current_user.id%>


			<!-- work in progress -->
			<div style="width: 100%">
			<%= f.text_field :name, placeholder: "new list name", class: "field-new-list" %>
			
			<div style="display: inline;">
			<%= f.submit "New", class: "" %>
			
			<!-- until there -->


			</div>
			
	<% end %>

	</div>
		
			
			</div>


			</div>
		</div>
	</div>

