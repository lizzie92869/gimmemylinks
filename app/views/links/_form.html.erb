		<%= f.radio_button("priority", "medium") %>

		 <label>high</label>
		<%= f.radio_button("priority", "high") %>



		<!-- can't use bootstrap and rails helper? -->

	<!-- 	</div> -->

		<%= f.hidden_field :user_id, value:  current_user.id%>
