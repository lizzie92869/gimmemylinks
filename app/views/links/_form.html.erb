<%= form_for [list, link] do |f|%>
	<div class="font">
	<%= f.text_field :name, placeholder: "name" %>
	</div>
	<div class="font">
	<%= f.text_field :url, placeholder: "url", class: "field-length" %>
	</div>



		<%= f.hidden_field :user_id, value:  current_user.id%>
		<%= f.hidden_field :list_id, value: list.id %>
		<div class="save-button">
		<%= f.submit "Save link!", class:"save-button grey-text" %>
		</div>


<% end %>
