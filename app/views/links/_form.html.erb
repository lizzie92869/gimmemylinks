<%= form_for [@list, @link] do |f|%>
<div class="form-fields">
<%= f.text_field :name, placeholder: "name" %>
</div>
</br>
<div class="form-fields">
<%= f.text_field :url, placeholder: "url", class: "field-length" %>
</div>
</br>
</br>
<div class="new">
	priority:

		 <label>low</label>
		<%= f.radio_button("priority", "low") %>

